<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
      integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="stylesheets/style.css" />
    <title>Slack</title>
  </head>
  <body>
    <main>
      <div class="container">
        <ul class="channel-list">
          <% channels.forEach(channel => { %>
          <li class="channel"><span># <%= channel.name %></span></li>
          <% }) %>
          <!-- <li class="channel"><span># general</span></li>
          <li class="channel"><span># random</span></li> -->
          <li class="create-channel">
            <i class="fas fa-plus"></i>チャンネルを追加する
          </li>
        </ul>
        <div class="right-content">
          <div class="messages"></div>
          <div class="typing"></div>

          <form action="" id="form-message">
            <input type="text" id="input-message" required />
            <button type="submit">submit</button>
          </form>
        </div>

        <!-- モーダルの外側(モーダル以外のすべて) -->
        <div id="myModal" class="modal">
          <!-- モーダルの内容 -->
          <div class="modal-content">
            <span class="close">&times;</span>
            <form id="form-channel">
              <label for="input-channel">名前</label><br />
              <input
                type="text"
                id="input-channel"
                placeholder="# 例: general,random"
                required
              />
              <div class="submit-btn">
                <button>作成</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>

    <script src="/socket.io/socket.io.js"></script>
    <script src="javascripts/client.js"></script>
  </body>
</html>
